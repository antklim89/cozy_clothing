{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "./src/**/*",
    "./cms/**/*",
    "./cypress/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ],
}